package controle;

public class BreakRotulado { // TENTE FUGIR AO MÁXIMO DESSE TIPO 	
	public static void main(String[] args) {
		externo: for (int i = 0; i <3; i++) {
			 for (int j = 0; j<3; j++) {
				if (i == 1) {
					break externo; // Nesse caso break vai sair do laço mais interno (j)
									// Utilizar rotulo para poder sair de um laço mais externo (i)
				}
				System.out.printf("%d %d ", i, j);
			}
			System.out.println();
		}
		System.out.println("FIM!");
	}
}
