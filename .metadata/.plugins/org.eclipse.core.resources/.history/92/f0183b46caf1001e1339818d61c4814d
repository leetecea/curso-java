package oo.composicao;

public class Carro {
	Motor motor = new Motor();
	
	void acelerar() {
		motor.fatorInjecao +=0.4;
	}
	
	void frear() {
		motor.fatorInjecao -=0.4;
	}
	
	void ligar(){
		motor.ligado = true;
	}
	
	void desligar(){
		motor.ligado = false;
	}
	
	boolean estaLigado() {
		if (motor.ligado == true) {
			return true;
		} else if (motor.ligado == false) {
			return false;
		}
	}
}
