package oo.composicao.desafio;

import oo.composicao.umPraMuitos.Item;

//1 cliente
//2 compras 
//cada compra -> 2 itens
public class Sistema {
	public static void main(String[] args) {
				
		Compra compra1 = new Compra();
		compra1.adicionarItem("Caneta", 12, 5.99);
		compra1.adicionarItem("Borracha", 5, 2.99);
		compra1.adicionarItem("Caderno", 3, 12.69); 
		
		Compra compra2 = new Compra();
		compra2.adicionarItem("Caneta", 12, 5.99);
		compra2.adicionarItem("Borracha", 5, 2.99);
		compra2.adicionarItem("Caderno", 3, 12.69); 
		
		Cliente cliente = new Cliente("Maria JÃºlia");
		cliente.compras.add(compra1);
		cliente.compras.add(compra2);
		System.out.println(cliente.obterValorTotal());
	}
}
