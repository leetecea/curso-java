package collections;

import java.util.LinkedList;
import java.util.Queue;

public class Fila {
	
	public static void main(String[] args) {
		
		Queue<String> fila = new LinkedList<>();
		// Offer e Add -> os dois adicionam elementos na fila
		
		// Diferença é o comportamento que ocorre quando a fila está cheia!
		fila.add("Ana"); // -> lançará uma exceção caso a fila esteja cheia
		fila.offer("Bia"); // -> retorna falso caso a fila esteja cheia e nao adiciona o elemento na fila
		fila.add("Carlos");
		fila.offer("Daniel");
		fila.add("Rafaela");
		fila.offer("Gui");
		
		System.out.println(fila.peek()); // retorna 1 elemento da fila, apenas lê o elemento
		System.out.println(fila.peek());// se fila estiver vazia, retorna nulo
		System.out.println(fila.element());
		
		
		
	}
	
}
