package classe;

// crie classe com 3 atributos - mes, dia e ano
// dentro da ClasseDataTeste instancie 2 datas

public class DesafioData {
	int dia;
	int mes;
	int ano;
	
	DesafioData(){
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	DesafioData(int dia, int mes, int ano){
		this.dia = dia;
		this.mes =  mes;
		this.ano = ano;
		
		// 1ยบ uso do THIS -> usar para referenciar o objeto atual 
	}
	String obterDataFormata () {
		 return String.format("%s/%s/%s", dia, mes, ano);
	}
	
	
}
