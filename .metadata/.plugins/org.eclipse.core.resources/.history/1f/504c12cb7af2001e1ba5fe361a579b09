package oo.composicao;

import java.util.ArrayList;

public class Compra {
	
	String cliente;
	// lista homogenea: sรณ tem itens do tipo Item na lista
	ArrayList<Item> itens = new ArrayList<Item>();
	
	double getValorTotal(){
		double total = 0;
		for (Item item: itens) {
			total += item.quantidade * item.preco;
		}
		return total;
	}
	
}
